@model Siscred.Application.ViewModel.RedefinirSenhaVm

@using (Html.BeginForm("RedefinirSenha", "Conta", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Chave)
    @Html.HiddenFor(m => m.Email)
    <fieldset>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", disabled = "" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.Senha, new { @class = "form-control", placeholder = "Senha", required = "" })
            @Html.ValidationMessageFor(m => m.Senha)
        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.SenhaConfirmada, new { @class = "form-control", placeholder = "Repetir senha", required = "" })
            @Html.ValidationMessageFor(m => m.SenhaConfirmada)
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Redefinir</button>
            <a href="@Url.Action("Autenticar", "Conta")" class="btn btn-warning">Retornar</a>
        </div>
    </fieldset>
}
@model Siscred.Application.ViewModel.LoginVm
@{
    ViewBag.Title = "Autenticar";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">Autenticação</div>               
            </div>
            <div class="panel-body">
                @Html.Partial("_FormLogin")
            </div>
        </div>
    </div>
</div>

<div id="modalRecuperarSenha" data-url="@Url.Action("RecuperarSenha", "Conta")" class="modal fade" aria-hidden="true"></div>

@section scripts {
    @Scripts.Render("~/bundles/recuperacao-senha-js")
}
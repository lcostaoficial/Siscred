@using Siscred.Application.ViewModel
@model InscricaoVm
@{
    var edital = (EditalVm)ViewBag.Edital;
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Informações do Edital
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group col-md-12">
                    <div class="pull-left">
                        <p>
                            <b>Edital:</b>
                            @edital.Descricao
                        </p>
                    </div>
                    <div class="pull-right">
                        <p>
                            <b>Data de Encerramento:</b>
                            @edital.DataEncerramento.ToShortDateString()
                        </p>
                    </div>
                </div>

                @if (edital.HabilitarMicrorregiao)
                {
                    <div id="cidades" class="form-group col-md-12" data-url="@Url.Action("ObterCidadesPorEdital", "Inscricao", new { editalId = (int)ViewBag.Edital.Id, area = "Empresa" })">
                        @Html.Label("Micro-região de interesse em ordem de preferência")
                    </div>
                    <div class="form-group col-md-4">
                        @Html.LabelFor(m => m.MicroRegiao1Id)
                        @Html.DropDownListFor(x => x.MicroRegiao1Id, new MultiSelectList(ViewBag.MicroRegiao, "Id", "Nome"), new { @class = "form-control selectpicker microregiao", data_live_search = "true", title = "Selecione os tipos de arquivos...", data_size = "5" })
                        @Html.ValidationMessageFor(m => m.MicroRegiao1Id)
                    </div>
                    <div class="form-group col-md-4">
                        @Html.LabelFor(m => m.MicroRegiao2Id)
                        @Html.DropDownListFor(x => x.MicroRegiao2Id, new MultiSelectList(ViewBag.MicroRegiao, "Id", "Nome"), new { @class = "form-control selectpicker microregiao", data_live_search = "true", title = "Selecione os tipos de arquivos...", data_size = "5" })
                        @Html.ValidationMessageFor(m => m.MicroRegiao2Id)
                    </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(m => m.MicroRegiao3Id)
                        @Html.DropDownListFor(x => x.MicroRegiao3Id, new MultiSelectList(ViewBag.MicroRegiao, "Id", "Nome"), new { @class = "form-control selectpicker microregiao", data_live_search = "true", title = "Selecione os tipos de arquivos...", data_size = "5" })
                        @Html.ValidationMessageFor(m => m.MicroRegiao3Id)
                    </div>
                }
            </div>
        </div>
    </div>
</div>
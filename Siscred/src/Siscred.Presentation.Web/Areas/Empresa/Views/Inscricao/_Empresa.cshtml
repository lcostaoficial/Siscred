@using Siscred.Application.ViewModel
@model InscricaoVm

<div class="panel panel-primary">
    <div class="panel-heading">
        Dados da Empresa
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group col-md-2">
                    @Html.LabelFor(m => m.Cnpj)
                    @Html.TextBoxFor(m => m.Cnpj, new { @class = "form-control cnpj", placeholder = "__.___.___/____-__", data_url = Url.Action("ValidarCnpj", "Inscricao", new { area = "Empresa" }) })
                    @Html.ValidationMessageFor(m => m.Cnpj)
                </div>
                <div class="form-group col-md-5">
                    @Html.LabelFor(m => m.RazaoSocial)
                    @Html.TextBoxFor(m => m.RazaoSocial, new { @class = "form-control", placeholder = "Nome de registro da sua empresa" })
                    @Html.ValidationMessageFor(m => m.RazaoSocial)
                </div>
                <div class="form-group col-md-5">
                    @Html.LabelFor(m => m.NomeFantasia)
                    @Html.TextBoxFor(m => m.NomeFantasia, new { @class = "form-control", placeholder = "Nome simbólico ou marca empresarial" })
                    @Html.ValidationMessageFor(m => m.NomeFantasia)
                </div>
                <div class="form-group col-md-12">
                    @Html.LabelFor(m => m.ObjetoSocial)
                    @Html.TextAreaFor(m => m.ObjetoSocial, new { @class = "form-control", placeholder = "Exemplo: O objeto é consultoria econômica, financeira, contabilidade e serviços de gestão, a formação e desenvolvimento de empresas a nível doméstico e internacional, estudos de mercado, publicidade e serviços de marketing, comissões e consignações; importação e exportação por grosso ou a retalho." })
                    @Html.ValidationMessageFor(m => m.ObjetoSocial)
                </div>
                <div class="form-group col-md-12">
                    @Html.LabelFor(m => m.Experiencia)
                    @Html.TextAreaFor(m => m.Experiencia, new { @class = "form-control", placeholder = "Área de atuação e histórico de serviços realizados." })
                    @Html.ValidationMessageFor(m => m.Experiencia)
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(m => m.ResponsavelLegal)
                    @Html.TextBoxFor(m => m.ResponsavelLegal, new { @class = "form-control", placeholder = "Nome Completo do responsável legal pela empresa" })
                    @Html.ValidationMessageFor(m => m.ResponsavelLegal)
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(m => m.EmailCorporativo)
                    @Html.TextBoxFor(m => m.EmailCorporativo, new { @class = "form-control", placeholder = "E-mail da empresa ou do responsável legal" })
                    @Html.ValidationMessageFor(m => m.EmailCorporativo)
                </div>
                <div class="form-group col-md-2">
                    @Html.LabelFor(m => m.Telefone)
                    @Html.TextBoxFor(m => m.Telefone, new { @class = "form-control telefone", placeholder = "(__) ____-____" })
                    @Html.ValidationMessageFor(m => m.Telefone)
                </div>
                <div class="form-group col-md-2">
                    @Html.LabelFor(m => m.Celular)
                    @Html.TextBoxFor(m => m.Celular, new { @class = "form-control celular", placeholder = "(__) _____-____" })
                    @Html.ValidationMessageFor(m => m.Celular)
                </div>
                <div class="form-group col-md-2">
                    @Html.LabelFor(m => m.Cep)
                    @Html.TextBoxFor(m => m.Cep, new { @class = "form-control cep", placeholder = "_____-___" })
                    @Html.ValidationMessageFor(m => m.Cep)
                </div>
                <div class="form-group col-md-2">
                    @Html.LabelFor(m => m.Rua)
                    @Html.TextBoxFor(m => m.Rua, new { @class = "form-control", placeholder = "Exemplo: Rua das Flores" })
                    @Html.ValidationMessageFor(m => m.Rua)
                </div>
                <div class="form-group col-md-2">
                    @Html.LabelFor(m => m.Numero)
                    @Html.TextBoxFor(m => m.Numero, new { @class = "form-control numero", placeholder = "Exemplo: 1234" })
                    @Html.ValidationMessageFor(m => m.Numero)
                </div>
                <div class="form-group col-md-2">
                    @Html.LabelFor(m => m.Bairro)
                    @Html.TextBoxFor(m => m.Bairro, new { @class = "form-control", placeholder = "Exemplo: Tancredo Neves" })
                    @Html.ValidationMessageFor(m => m.Bairro)
                </div>
                <div class="form-group col-md-2">
                    @Html.LabelFor(m => m.Cidade)
                    @Html.TextBoxFor(m => m.Cidade, new { @class = "form-control", placeholder = "Exemplo: Porto Velho" })
                    @Html.ValidationMessageFor(m => m.Cidade)
                </div>
                <div class="form-group col-md-2">
                    @Html.LabelFor(m => m.Estado)
                    @Html.EnumDropDownListFor(m => m.Estado, "Selecione...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Estado)
                </div>
            </div>
        </div>
    </div>
</div>
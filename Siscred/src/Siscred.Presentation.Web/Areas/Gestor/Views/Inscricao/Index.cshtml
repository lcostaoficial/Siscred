@model IEnumerable<Siscred.Application.ViewModel.InscricaoVm>
@{
    ViewBag.Title = "Inscrições";
    ViewBag.Subtitle = "Todos";
}

@section styles {
    @Styles.Render("~/Content/datatables-css")
}

@Html.Partial("_Title")

<div class="row">
    <div class="form-group col-md-12">
        @Html.Label("Selecione o edital que deseja visualizar as inscrições:")
        @Html.DropDownList("EditalId", new SelectList(ViewBag.Editais, "Id", "Descricao"), "Selecione...", new { @class = "form-control", required = "" })
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading clearfix">
                <h4 class="panel-title pull-left" style="padding-top: 7.5px;">@ViewBag.Subtitle</h4>
            </div>
            <div class="panel-body" data-url="@Url.Action("Inscricoes", "Inscricao")">
                <p>Selecione um parâmetro de filtro acima...</p>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/inscricao-visualizacao-js")
    @Scripts.Render("~/bundles/datatables-js")
    @Scripts.Render("~/bundles/table-data-js")
}